# ==========================================
# SaaS Clínicas — Variables de Entorno
# ==========================================

# App
APP_NAME=SaaS Clínicas
APP_ENV=development
DEBUG=true
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/clinicas_db
DATABASE_URL_SYNC=postgresql://postgres:postgres@localhost:5432/clinicas_db

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT (RS256)
# Generar claves: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY_PATH=./keys/private.pem
JWT_PUBLIC_KEY_PATH=./keys/public.pem
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption (Fernet key para PII)
# Generar: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=your-fernet-key-here

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# NubeFact (SUNAT) — Hito 4
NUBEFACT_API_URL=https://api.nubefact.com/api/v1
NUBEFACT_API_TOKEN=your-nubefact-token

# Twilio SMS — Recordatorios de citas
# Registrar en: https://www.twilio.com/try-twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15005550006

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# json.pe (Consultas DNI / RUC)
# Generar token en: https://json.pe
JSONPE_API_URL=https://api.json.pe/api
JSONPE_API_TOKEN=your-jsonpe-token
